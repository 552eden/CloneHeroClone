<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#c447bd">

    <ImageView
        android:id="@+id/songImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/songNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/songImage"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/songImage"
        android:text="song-name-tmp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/songImage"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/songImage"
        android:text="player-name-tmp:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playerNameTextView"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/playerNameTextView"
        android:text="score-tmp"
        android:textSize="16sp" />
</RelativeLayout>